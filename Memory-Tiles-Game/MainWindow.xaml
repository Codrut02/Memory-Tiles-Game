<Window x:Class="Memory_Tiles_Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memory_Tiles_Game"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Memory Tiles" FontSize="40" FontStyle="Italic"
                   VerticalAlignment="Top" HorizontalAlignment="Center" />

        <Button Name="bNewUser" Width="75" Height="50" 
                VerticalAlignment="Bottom" HorizontalAlignment="Left" 
                Content="New User" FontSize="13" Click="bNewUser_Click"/>
        
        <Button Name="bDeleteUser" Width="75" Height="50" 
                VerticalAlignment="Bottom" HorizontalAlignment="Center" 
                Content="Delete User" FontSize="13" Click="bDeleteUser_Click"/> 
        
        <Button Name="bPlay" Width="75" Height="50" 
                VerticalAlignment="Bottom" HorizontalAlignment="Right" 
                Content="Play" FontSize="13" Click="bPlay_Click"/>
        
        <Button Name="bExit" Width="75" Height="50" 
                VerticalAlignment="Top" HorizontalAlignment="Right" 
                Content="Exit" FontSize="13" Click="bExit_Click"/>

    </Grid>
</Window>
