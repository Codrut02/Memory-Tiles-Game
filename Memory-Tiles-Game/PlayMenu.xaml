<Window x:Class="Memory_Tiles_Game.PlayMenu"
        WindowStartupLocation="CenterOwner"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memory_Tiles_Game"
        mc:Ignorable="d"
        Title="PlayMenu" Height="450" Width="600" Background="#FF9EAEB5">
    <Grid>
        <TextBlock Text="Memory Tiles" FontSize="40" FontStyle="Italic" FontWeight="Bold"
                   VerticalAlignment="Top" HorizontalAlignment="Center" Grid.RowSpan="2" FontFamily="Algerian" Foreground="#FF154FBB" />

        <Button Name ="NewGame" Content="New game" Height="50" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="71,95,0,0"
                />
        <Button Name ="CreateGame" Content="Choose game" Height="50" HorizontalAlignment="Left" Width="100" VerticalAlignment="Top" Margin="362,95,0,0"
                />
        <Button Name ="Back" Content="Go back" Height="50" HorizontalAlignment="Left" Width="100" VerticalAlignment="Top" Margin="71,283,0,0" RenderTransformOrigin="-1.228,2.904" Click="Back_Click"
                />
    </Grid>
</Window>
